---
interface Props {
    title: string;
    href: string;
}
const { title, href } = Astro.props;
---

<li class="tab">
    <a href={href}>
        <h1>
            {title}
        </h1>
    </a>
</li>
<style>
    li {
        
    }
    li > a {
        height: 10vh;
        
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding: 10px;
        text-decoration: none;
    }
    li > a > h1 {
        font-size: 30px;
        transition: 0.3s;
        transition-timing-function:cubic-bezier(0.47, 0, 0.745, 0.715);
    }
    .tab {
        flex: 1 1 0;
    
    }
    .tab:is(:hover, :focus-within) {
        background-position: 0;
        background-color: #5f3df5;
    }
    .tab:is(:hover, :focus-within) h1{
        transform: scale(1.1);
    }
</style>