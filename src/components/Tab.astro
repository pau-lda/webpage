---
interface Props {
    title: string;
    href: string;
}
const { title, href } = Astro.props;
---

<div class="tab">
    <a href={href}>
        
            <h1>
                {title}
            </h1>
        
    </a>
</div>
<style>
    .tab {
        flex: 1 0 0; /** stretches tab to full bar */
        height: 100%;
    }
    .tab > a {
        text-decoration: none;
        display: flex;
            align-items: center;
            justify-content: center;
        width: 100%;
        height: 100%;
    }
    .tab > a > h1 {
        position: relative;
        padding-bottom: 5px; /** shift upward to make it look centered */
        font-size: 30px;
        transition: 0.3s;
        transition-timing-function:cubic-bezier(0.47, 0, 0.745, 0.715);
    }
    .tab:is(:hover, :focus-within) {
        background-position: 0;
        background-color: #5f3df5;
    }
    .tab:is(:hover, :focus-within) h1{
        transform: scale(1.1);
    }
</style>