---
interface Props {
}

import Tab from './Tab.astro';
---

<div role="list" class="tab-bar" id="tab-bar" transition:name="tab-bar">
    <Tab 
        href='/index.html'
        title='Home'
    />
    <Tab 
        href='/tabs/projects'
        title='Projects'
    />
    <Tab 
        href='/tabs/resume'
        title='Resume'
    />
    <Tab 
        href='/tabs/about'
        title='About'
    />
</div>


<style is:global>
	.tab-bar {
        justify-content: space-evenly;
        align-items: center;
        
		float: right;
		overflow: hidden;
        margin-right: 10px;

        width: 40em;
            max-width: calc(100% - 2rem);
        height: calc(100% - 2em);

		display: flex;
            flex-direction: row;
		    flex-wrap: wrap;

        position: relative;
		
		border: 2px solid;
		border-radius: 10px;
		border-color: #3c2895;
	}

</style>