---
interface Props {
    tab?: [{
        title: string;
        href: string;
        align: "start" | "end";
    }];
    exclude?: string;
    classes?: string;
}
const { tab, exclude, classes } = Astro.props;

import Tab from "./Tab.astro";
import tabData from "../data/raw/dataTabs.json"
---

<div role="list" id="tab-bar" class="tab-bar" transition:animate="morph">
    {
        tab && tab.map((item) => 
            item.align === "start" &&
            <Tab title={item.title} href={item.href}/>
        )
    }
    {
        tabData.map((item) => 
            exclude !== item.title &&
            <Tab title={item.title} href={item.href} transition:persist/>
        )
    }
    {
        tab && tab.map((item) => 
            item.align === "end" &&
            <Tab title={item.title} href={item.href}/>
        )
    }
</div>
<style is:global>
    .tab-bar {
        container-type: inline-size; /* to set tab font-size relative to tab-bar width */
        justify-content: space-evenly;
        align-items: center;

        float: right;
        overflow: hidden;
        margin: 10px;

        width: 60vw;
        max-width: calc(100% - 0rem);
        height: calc(100% - 2em);

        display: flex;
        flex-direction: row;
        flex-wrap: wrap;

        position: relative;

        /*
        border: 2px solid;
        border-radius: 30px;
        border-color: var(--color3);
        */

    }
</style>
