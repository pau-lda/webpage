---

import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import TabBar from '../components/TabBar.astro';

---

<Layout title="Webpage">
	<TabBar exclude='Home' slot='header-container'/>
	
</Layout>
<style>
</style>
<style is:inline>
	.tab-bar {
		margin: auto;
		width: calc(90%);
		align-items: center;

		border-bottom: none;
	}
	.tab {
		height: 15vw !important;
	}
	header{
		height: 90vh;
	}

	@media only screen and (max-width: 700px) {
		body {
			height: 100%;
		}
		header {
			height: calc(100% - 2vh);
			margin: 0;
		}
		.header-container {
			padding-top: 1vh;
			padding-bottom: 1vh;
		}
		.tab-bar {
			width: 100%;
			overflow: unset;
		}
		.tab {
			flex: 0 0 90% !important;
			align-self: stretch;
			height: auto !important;
		}
	}
	
</style>